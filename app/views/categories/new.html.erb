

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: "#{name}" %>
<% end -%>
<h1> Add Category</h1>
<%= form_with model: @category, url: categories_path do |f| %>

    <div class="form-group">
      <div class="field">
      <%= f.text_field :name, placeholder: "Category name"%>
    </div>

      <div class="field">
          <%= f.label "Icon type" %>
          <%= f.collection_select :icon, Category::ICONS, :to_s, :humanize %>
        </div>

</div>

    <%= f.submit "Save"%>



<% end %>
