<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: "#{name}" %>
<% end -%>
<h1> Add Expense</h1>
  <%=form_with(model: @expense, url: category_expenses_path, method: :post, local: true) do |f| %>

    <div class="form-group">

      <%= f.text_field :name, placeholder: "Expense name"%>
    </div>

      <div>
          <%= f.label "Amount" %>
          <%= f.number_field :amount, placeholder: "Enter Amount"%>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :category_id, value: params[:category_id] %> 



    <%= f.submit "Save"%>



<% end %>
